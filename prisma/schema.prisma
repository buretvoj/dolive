generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  description String?
  sections    Section[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Section {
  id        String   @id @default(cuid())
  type      String   // hero, content, blog-list
  content   Json     // dynamic content
  order     Int
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  content   String   @db.Text
  excerpt   String?
  author    String?
  media     Media[]
  published DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   
  url         String
  postId      String?
  post        Post?    @relation(fields: [postId], references: [id])
  createdAt   DateTime @default(now())
}

model Navigation {
  id        String   @id @default(cuid())
  label     String
  href      String
  order     Int
  parentId  String?
  parent    Navigation?  @relation("NavChildren", fields: [parentId], references: [id])
  children  Navigation[] @relation("NavChildren")
}

model Performer {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  genre       String   // Category/genre tags (comma-separated or single)
  photo       String?  @db.Text // Base64 image
  description String?  @db.Text
  links       Json?    // Social links: { facebook, instagram, soundcloud, website, youtube }
  year        Int      @default(2026)
  videoUrl    String?  @db.Text
  active      Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Ticket {
  id          String   @id @default(cuid())
  title       String
  price       String
  badge       String?
  description String?  @db.Text // e.g., "do vyprodání" or "Podpořte nás..."
  features    String?  @db.Text // e.g., "nejpozději do..." or multi-line perks
  buttonText  String?
  type        String   // active, upcoming, support, onsite
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
